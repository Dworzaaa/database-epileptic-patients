<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.PatientEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.PatientDisplayVO</class-b>
        <field>
            <a>birthday</a>
            <b date-format="yyyy-MM-dd">birthday</b>
        </field>
        <field custom-converter="cz.cvut.fit.genepi.businessLayer.converter.DateToAgeConverter">
            <a>birthday</a>
            <b>age</b>
        </field>
    </mapping>

    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.NeurologicalFindingEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.NeurologicalFindingDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.PharmacotherapyEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.PharmacotherapyDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.SeizureEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.SeizureDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.SeizureDetailEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.SeizureDetailDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>
</mappings>