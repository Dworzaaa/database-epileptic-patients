<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <!-- Patient -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.PatientEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.PatientDisplayVO</class-b>
        <field>
            <a>birthday</a>
            <b date-format="yyyy-MM-dd">birthday</b>
        </field>
        <field custom-converter="cz.cvut.fit.genepi.util.DateToAgeConverter">
            <a>birthday</a>
            <b>age</b>
        </field>
    </mapping>

    <!-- Anamnesis -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.AnamnesisEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.AnamnesisDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
        <field>
            <a>beginningEpilepsy</a>
            <b date-format="yyyy-MM-dd">beginningEpilepsy</b>
        </field>
    </mapping>

    <!-- Complication -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.ComplicationEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.ComplicationDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Diagnostic test MRI -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.DiagnosticTestMriEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.DiagnosticTestMriDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Diagnostic test scalp EEG -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.DiagnosticTestScalpEegEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.DiagnosticTestScalpEegDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Diagnostic histology -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.HistologyEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.HistologyDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Invasive test cortical mapping -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.InvasiveTestCorticalMappingEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.InvasiveTestCorticalMappingDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Invasive test ECOG -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.InvasiveTestEcogEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.InvasiveTestEcogDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Invasive test EEG -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.InvasiveTestEegEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.InvasiveTestEegDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Neurological finding -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.NeurologicalFindingEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.NeurologicalFindingDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Neuropsychology -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.NeuropsychologyEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.NeuropsychologyDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
        <field custom-converter="cz.cvut.fit.genepi.util.IntArrayToStringConverter">
            <a>presenceOfChangesDetail</a>
            <b>presenceOfChangesDetail</b>
        </field>
    </mapping>

    <!-- Neuropsychology old -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.NeuropsychologyOldEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.NeuropsychologyOldDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Operation -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.OperationEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.OperationDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
        <field>
            <a>dateOperation</a>
            <b date-format="yyyy-MM-dd">dateOperation</b>
        </field>
        <field>
            <a>vnsImplantationDate</a>
            <b date-format="yyyy-MM-dd">vnsImplantationDate</b>
        </field>
    </mapping>

    <!-- Pharmacotherapy -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.PharmacotherapyEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.PharmacotherapyDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Seizure detail -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.SeizureDetailEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.SeizureDetailDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Seizure -->
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.SeizureEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.SeizureDisplayVO</class-b>
        <field>
            <a>date</a>
            <b date-format="yyyy-MM-dd">date</b>
        </field>
    </mapping>

    <!-- Outcome -mby not needed
    <mapping type="one-way">
        <class-a>cz.cvut.fit.genepi.dataLayer.entity.card.OutcomeEntity</class-a>
        <class-b>cz.cvut.fit.genepi.businessLayer.VO.display.card.OutcomeDisplayVO</class-b>

    </mapping>-->

    <mapping>
        <class-a>cz.cvut.fit.genepi.businessLayer.VO.form.card.NeuropsychologyVO</class-a>
        <class-b>cz.cvut.fit.genepi.dataLayer.entity.card.NeuropsychologyEntity</class-b>
        <field custom-converter="cz.cvut.fit.genepi.util.IntArrayToStringConverter">
            <a>presenceOfChangesDetail</a>
            <b>presenceOfChangesDetail</b>
        </field>
    </mapping>

</mappings>